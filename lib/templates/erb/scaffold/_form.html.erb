<%%= simple_form_for(@<%= singular_table_name %>, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <%%= f.error_notification %>

<% attributes.each do |attribute| -%>
  <div class="form-group">
    <%%= f.label :<%= attribute.name %>, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%%= f.<%= attribute.reference? ? :association : :input %> :<%= attribute.name %>, class: "form-control" %>
    </div>
  </div>
<% end -%>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%%= f.button :submit, class: "btn btn-primary" %>
    </div>
  </div>
<%% end %>
