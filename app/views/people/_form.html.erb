<%= simple_form_for(@person, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.label :slug, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.input :slug, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :photo, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.input :photo, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.input :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :born, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.input :born, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
