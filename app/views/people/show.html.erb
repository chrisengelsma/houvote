<div class="page-header">
  <%= link_to people_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_person_path(@person), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show person</h1>
</div>

<dl class="dl-horizontal">
  <dt>Slug:</dt>
  <dd><%= @person.slug %></dd>

  <dt>Photo:</dt>
  <dd><%= @person.photo %></dd>

  <dt>Name:</dt>
  <dd><%= @person.name %></dd>

  <dt>Born:</dt>
  <dd><%= @person.born %></dd>

</dl>
