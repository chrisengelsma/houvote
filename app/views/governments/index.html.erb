<div class="page-header">
  <%= link_to new_government_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Government
  <% end %>
  <h1>Listing governments</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Slug</th>
            <th>Name</th>
            <th>Level</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @governments) do |government| %>
            <td><%= government.slug %></td>
            <td><%= government.name %></td>
            <td><%= government.level %></td>
            <td><%= link_to 'Show', government %></td>
        <td><%= link_to 'Edit', edit_government_path(government) %></td>
        <td><%= link_to 'Destroy', government, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
