<%= simple_form_for(@term, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.label :government_slug, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.input :government_slug, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :person_slug, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.input :person_slug, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.input :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.input :start_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.input :end_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
